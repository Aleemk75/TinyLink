<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TinyLink - URL Shortener</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * { font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif; }
        .sidebar-nav { transition: all 0.3s ease; }
        .btn-create-hover { transition: all 0.3s ease; }
        .btn-create-hover:hover { transform: translateY(-2px); box-shadow: 0 8px 16px rgba(0,0,0,0.1); }
        .link-card { transition: all 0.2s ease; }
        .link-card:hover { box-shadow: 0 8px 24px rgba(0,0,0,0.08); transform: translateY(-1px); }
    </style>
</head>
<body class="bg-slate-50">

    <div class="flex flex-col h-screen">
        <!-- Top Navbar -->
        <div class="bg-white border-b border-slate-200 sticky top-0 z-10 shadow-sm">
            <div class="px-8 py-4 flex items-center justify-between">
                <!-- Logo -->
                <a href="/" class="flex items-center gap-3 hover:opacity-80 transition">
                    <div class="w-10 h-10 bg-gradient-to-br from-blue-600 to-blue-700 rounded-lg flex items-center justify-center">
                        <i class="fas fa-link text-white text-lg"></i>
                    </div>
                    <h1 class="text-xl font-bold text-slate-900">TinyLink</h1>
                </a>

                <!-- Right Side Buttons -->
                <div class="flex items-center gap-4">
                    <button onclick="checkHealth()" class="px-4 py-2 text-slate-700 hover:bg-slate-100 rounded-lg transition font-medium">
                        <i class="fas fa-heartbeat mr-2"></i>Health Check
                    </button>
                    <button class="px-6 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition">
                        Sign Up
                    </button>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-1 overflow-auto">
            <!-- Content Area -->
            <div class="p-8 max-w-7xl mx-auto w-full">
                <!-- Error & Success Alerts -->
                <% if (error) { %>
                    <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg flex items-start gap-3" id="errorAlert">
                        <i class="fas fa-exclamation-circle text-red-600 mt-0.5 flex-shrink-0"></i>
                        <div class="flex-1">
                            <p class="text-red-800 font-medium">Error</p>
                            <p class="text-red-700 text-sm mt-1"><%= error %></p>
                        </div>
                        <button onclick="this.parentElement.style.display='none'" class="text-red-600 hover:text-red-800">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                <% } %>

                <% if (success) { %>
                    <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg flex items-start gap-3" id="successAlert">
                        <i class="fas fa-check-circle text-green-600 mt-0.5 flex-shrink-0"></i>
                        <div class="flex-1">
                            <p class="text-green-800 font-medium">Success</p>
                            <p class="text-green-700 text-sm mt-1"><%= success %></p>
                        </div>
                        <button onclick="this.parentElement.style.display='none'" class="text-green-600 hover:text-green-800">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                <% } %>

                <!-- Create Link Section -->
                <div class="bg-white rounded-xl border border-slate-200 p-6 mb-8 shadow-sm">
                    <div class="flex items-center gap-3 mb-6">
                        <i class="fas fa-plus-circle text-blue-600 text-xl"></i>
                        <h3 class="text-lg font-bold text-slate-900">Create New Short Link</h3>
                    </div>

                    <form id="createForm" onsubmit="handleCreateLink(event)">
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                            <div class="md:col-span-2">
                                <label class="block text-sm font-semibold text-slate-700 mb-2">Paste Your Long URL</label>
                                <input
                                    type="url"
                                    id="url"
                                    placeholder="https://example.com/very/long/url/that/needs/shortening"
                                    required
                                    class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent placeholder-slate-400 text-slate-900"
                                >
                                <div class="error-message text-red-500 text-sm mt-1 hidden" id="urlError"></div>
                            </div>
                            <div>
                                <label class="block text-sm font-semibold text-slate-700 mb-2">Custom Alias</label>
                                <input
                                    type="text"
                                    id="customCode"
                                    placeholder="optional-code"
                                    maxlength="8"
                                    class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent placeholder-slate-400 text-slate-900"
                                >
                                <div class="error-message text-red-500 text-sm mt-1 hidden" id="codeError"></div>
                            </div>
                        </div>

                        <div class="flex gap-3">
                            <button type="submit" class="px-6 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition btn-create-hover" id="submitBtn">
                                <i class="fas fa-bolt mr-2"></i>Shorten URL
                            </button>
                            <button type="reset" class="px-6 py-2 bg-slate-100 text-slate-700 font-semibold rounded-lg hover:bg-slate-200 transition">
                                Clear
                            </button>
                        </div>
                    </form>

                    <!-- Success Display -->
                    <div id="successDisplay" class="hidden mt-6 p-4 bg-green-50 border border-green-200 rounded-lg">
                        <p class="text-green-700 text-sm font-medium mb-3">✓ Link created successfully!</p>
                        <div class="bg-white p-3 rounded-lg border border-green-200 mb-3 flex items-center justify-between">
                            <a id="generatedUrl" href="#" target="_blank" class="text-blue-600 font-mono text-sm break-all hover:underline flex-1"></a>
                            <button type="button" class="ml-2 px-3 py-1 bg-blue-600 text-white text-sm rounded hover:bg-blue-700 transition" onclick="copyGeneratedUrl(this)">
                                <i class="fas fa-copy mr-1"></i>Copy
                            </button>
                        </div>
                        <div class="flex gap-2">
                            <a id="statsLink" href="#" class="flex-1 px-3 py-2 bg-blue-600 text-white text-sm font-medium rounded hover:bg-blue-700 transition text-center">
                                <i class="fas fa-chart-bar mr-2"></i>View Stats
                            </a>
                            <button type="button" class="flex-1 px-3 py-2 bg-slate-200 text-slate-700 text-sm font-medium rounded hover:bg-slate-300 transition" onclick="resetForm()">
                                Create Another
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Links Table -->
                <div class="bg-white rounded-xl border border-slate-200 shadow-sm overflow-hidden">
                    <div class="px-6 py-4 border-b border-slate-200 flex items-center gap-3">
                        <i class="fas fa-link text-slate-600 text-lg"></i>
                        <h3 class="text-lg font-bold text-slate-900">Your Links</h3>
                        <% if (links && links.length > 0) { %>
                            <span class="ml-auto px-3 py-1 bg-blue-100 text-blue-700 text-xs font-semibold rounded-full"><%= links.length %></span>
                        <% } %>
                    </div>

                    <% if (links && links.length > 0) { %>
                        <div class="overflow-x-auto">
                            <table class="w-full">
                                <thead>
                                    <tr class="bg-slate-50 border-b border-slate-200">
                                        <th class="px-6 py-3 text-left text-xs font-semibold text-slate-700 uppercase tracking-wider">Short Link</th>
                                        <th class="px-6 py-3 text-left text-xs font-semibold text-slate-700 uppercase tracking-wider">Original URL</th>
                                        <th class="px-6 py-3 text-left text-xs font-semibold text-slate-700 uppercase tracking-wider">Clicks</th>
                                        <th class="px-6 py-3 text-left text-xs font-semibold text-slate-700 uppercase tracking-wider">Last Clicked</th>
                                        <th class="px-6 py-3 text-left text-xs font-semibold text-slate-700 uppercase tracking-wider">Created</th>
                                        <th class="px-6 py-3 text-left text-xs font-semibold text-slate-700 uppercase tracking-wider">Actions</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-slate-200">
                                    <% links.forEach(link => { %>
                                        <tr class="hover:bg-slate-50 transition link-card" data-code="<%= link.code %>">
                                            <td class="px-6 py-4">
                                                <div class="flex items-center gap-2">
                                                    <i class="fas fa-link text-slate-400 text-xs"></i>
                                                    <a href="<%= baseUrl %>/<%= link.code %>" target="_blank" class="font-mono text-sm font-semibold text-blue-600 hover:underline"><%= link.code %></a>
                                                </div>
                                            </td>
                                            <td class="px-6 py-4">
                                                <div class="max-w-xs truncate text-sm text-slate-600 hover:text-slate-900" title="<%= link.url %>">
                                                    <a href="<%= link.url %>" target="_blank" class="text-blue-600 hover:underline"><%= link.url %></a>
                                                </div>
                                            </td>
                                            <td class="px-6 py-4">
                                                <div class="flex items-center gap-2">
                                                    <i class="fas fa-mouse text-slate-400 text-xs"></i>
                                                    <span class="text-sm font-semibold text-slate-900 clicks-count"><%= link.clicks || 0 %></span>
                                                </div>
                                            </td>
                                            <td class="px-6 py-4 text-sm text-slate-600">
                                                <% if (link.lastClicked) { %>
                                                    <span class="last-accessed" title="<%= new Date(link.lastClicked).toLocaleString() %>">
                                                        <%= new Date(link.lastClicked).toLocaleDateString() %>
                                                    </span>
                                                <% } else { %>
                                                    <span class="last-accessed text-slate-400 italic">Never</span>
                                                <% } %>
                                            </td>
                                            <td class="px-6 py-4 text-sm text-slate-600">
                                                <%= new Date(link.createdAt).toLocaleDateString() %>
                                            </td>
                                            <td class="px-6 py-4">
                                                <div class="flex items-center gap-2">
                                                    <button
                                                        class="p-2 text-slate-600 hover:bg-blue-100 hover:text-blue-600 rounded transition"
                                                        onclick="copyToClipboard('<%= baseUrl %>/<%= link.code %>', this)"
                                                        title="Copy short URL"
                                                    >
                                                        <i class="fas fa-copy text-sm"></i>
                                                    </button>
                                                    <a href="/code/<%= link.code %>" class="p-2 text-slate-600 hover:bg-blue-100 hover:text-blue-600 rounded transition">
                                                        <i class="fas fa-chart-bar text-sm"></i>
                                                    </a>
                                                    <button
                                                        class="p-2 text-slate-600 hover:bg-red-100 hover:text-red-600 rounded transition"
                                                        onclick="deleteLink('<%= link.code %>')"
                                                        title="Delete link"
                                                    >
                                                        <i class="fas fa-trash text-sm"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="px-6 py-12 text-center">
                            <i class="fas fa-inbox text-4xl text-slate-300 mb-3 inline-block"></i>
                            <p class="text-slate-500 font-medium">No links yet</p>
                            <p class="text-slate-400 text-sm mt-1">Create your first shortened link to get started</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <script>
        async function handleCreateLink(event) {
            event.preventDefault();

            const url = document.getElementById('url').value.trim();
            const customCode = document.getElementById('customCode').value.trim();
            const submitBtn = document.getElementById('submitBtn');
            const urlError = document.getElementById('urlError');
            const codeError = document.getElementById('codeError');

            urlError.classList.add('hidden');
            codeError.classList.add('hidden');

            let isValid = true;
            if (!url) {
                urlError.textContent = 'URL is required';
                urlError.classList.remove('hidden');
                isValid = false;
            }

            if (customCode) {
                const codeRegex = /^[A-Za-z0-9]{6,8}$/;
                if (!codeRegex.test(customCode)) {
                    codeError.textContent = 'Code must be 6-8 alphanumeric characters';
                    codeError.classList.remove('hidden');
                    isValid = false;
                }
            }

            if (!isValid) return;

            submitBtn.disabled = true;
            const originalText = submitBtn.innerHTML;
            submitBtn.innerHTML = '<i class="fas fa-spinner animate-spin mr-2"></i>Creating...';

            try {
                const response = await fetch('/api/links', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ url, customCode: customCode || undefined })
                });

                const data = await response.json();

                if (!response.ok) {
                    if (response.status === 409) {
                        codeError.textContent = 'This code already exists';
                        codeError.classList.remove('hidden');
                    } else {
                        throw new Error(data.error || 'Failed to create link');
                    }
                } else {
                    const baseUrl = window.location.origin;
                    const shortUrl = `${baseUrl}/${data.code}`;
                    
                    document.getElementById('generatedUrl').textContent = shortUrl;
                    document.getElementById('generatedUrl').href = shortUrl;
                    document.getElementById('statsLink').href = `/code/${data.code}`;
                    document.getElementById('successDisplay').classList.remove('hidden');
                    document.getElementById('successDisplay').scrollIntoView({ behavior: 'smooth' });
                }
            } catch (error) {
                const errorDiv = document.createElement('div');
                errorDiv.className = 'mb-6 p-4 bg-red-50 border border-red-200 rounded-lg flex items-start gap-3';
                errorDiv.innerHTML = `
                    <i class="fas fa-exclamation-circle text-red-600 mt-0.5 flex-shrink-0"></i>
                    <div class="flex-1">
                        <p class="text-red-800 font-medium">Error</p>
                        <p class="text-red-700 text-sm mt-1">${error.message}</p>
                    </div>
                    <button onclick="this.parentElement.remove()" class="text-red-600 hover:text-red-800">
                        <i class="fas fa-times"></i>
                    </button>
                `;
                document.querySelector('.p-8').insertBefore(errorDiv, document.querySelector('.bg-white'));
            } finally {
                submitBtn.disabled = false;
                submitBtn.innerHTML = originalText;
            }
        }

        function copyGeneratedUrl(btn) {
            const url = document.getElementById('generatedUrl').textContent;
            navigator.clipboard.writeText(url).then(() => {
                btn.innerHTML = '<i class="fas fa-check mr-1"></i>Copied!';
                btn.classList.add('bg-green-600', 'hover:bg-green-700');
                btn.classList.remove('bg-blue-600', 'hover:bg-blue-700');
                setTimeout(() => {
                    btn.innerHTML = '<i class="fas fa-copy mr-1"></i>Copy';
                    btn.classList.remove('bg-green-600', 'hover:bg-green-700');
                    btn.classList.add('bg-blue-600', 'hover:bg-blue-700');
                }, 2000);
            });
        }

        function copyToClipboard(text, btn) {
            navigator.clipboard.writeText(text).then(() => {
                btn.innerHTML = '<i class="fas fa-check"></i>';
                btn.classList.add('bg-green-100', 'text-green-600');
                setTimeout(() => {
                    btn.innerHTML = '<i class="fas fa-copy"></i>';
                    btn.classList.remove('bg-green-100', 'text-green-600');
                }, 2000);
            });
        }

        function resetForm() {
            document.getElementById('createForm').reset();
            document.getElementById('successDisplay').classList.add('hidden');
            document.getElementById('url').focus();
        }

        async function deleteLink(code) {
            if (!confirm(`Delete link "${code}"?`)) return;

            try {
                const response = await fetch(`/api/links/${code}`, { method: 'DELETE' });
                if (response.ok) window.location.href = '/';
                else throw new Error('Failed to delete');
            } catch (error) {
                alert('Error: ' + error.message);
            }
        }

        function checkHealth() {
            fetch('/healthz')
                .then(response => response.json())
                .then(data => {
                    alert(`✅ System Status:\n\nStatus: OK\nVersion: ${data.version || '1.0'}\nUptime: ${data.uptime || 'Running'}`);
                })
                .catch(error => {
                    alert(`❌ Health Check Failed:\n\n${error.message}`);
                });
        }

        // Auto-refresh dashboard stats every 2 seconds
        setInterval(async () => {
            try {
                const response = await fetch('/api/links');
                if (!response.ok) throw new Error('Failed to fetch links');
                
                const links = await response.json();
                
                // Update each row's click count
                links.forEach(link => {
                    const clicksElement = document.querySelector(`[data-code="${link.code}"] .clicks-count`);
                    const dateElement = document.querySelector(`[data-code="${link.code}"] .last-accessed`);
                    
                    if (clicksElement) {
                        clicksElement.textContent = link.clicks || 0;
                    }
                    if (dateElement && link.lastAccessed) {
                        const date = new Date(link.lastAccessed).toLocaleString();
                        dateElement.textContent = date;
                    }
                });
            } catch (error) {
                console.log('Error refreshing dashboard stats:', error);
            }
        }, 2000);

        document.addEventListener('DOMContentLoaded', () => {
            const alerts = document.querySelectorAll('[id$="Alert"]');
            alerts.forEach(alert => {
                setTimeout(() => alert.style.display = 'none', 5000);
            });
        });
    </script>
</body>
</html>
</html>
    