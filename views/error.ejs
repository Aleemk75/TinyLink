<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Error | TinyLink</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * { font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif; }
        .shake-animation { animation: shake 0.5s ease-in-out; }
        @keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-10px); }
            75% { transform: translateX(10px); }
        }
    </style>
</head>
<body class="bg-slate-50">

    <div class="flex flex-col h-screen">
        <!-- Top Navbar -->
        <div class="bg-white border-b border-slate-200 shadow-sm">
            <div class="px-8 py-4 flex items-center justify-between">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 bg-gradient-to-br from-blue-600 to-blue-700 rounded-lg flex items-center justify-center">
                        <i class="fas fa-link text-white text-lg"></i>
                    </div>
                    <h1 class="text-xl font-bold text-slate-900">TinyLink</h1>
                </div>

                <div class="flex items-center gap-4">
                    <a href="/" class="px-4 py-2 text-slate-700 hover:bg-slate-100 rounded-lg transition font-medium">
                        <i class="fas fa-home mr-2"></i>Dashboard
                    </a>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-1 overflow-auto flex items-center justify-center">
            <div class="text-center px-8 py-12 max-w-2xl">
                <!-- Error Icon -->
                <div class="text-8xl mb-6 shake-animation">
                    <i class="fas fa-exclamation-triangle text-red-500"></i>
                </div>

                <!-- Heading -->
                <h1 class="text-5xl font-bold text-slate-900 mb-3">Oops!</h1>
                <h2 class="text-2xl font-semibold text-slate-700 mb-4">Something Went Wrong</h2>

                <!-- Error Message -->
                <div class="bg-red-50 border border-red-200 rounded-lg p-6 mb-8">
                    <div class="flex items-start gap-3">
                        <i class="fas fa-bug text-red-600 text-xl flex-shrink-0 mt-1"></i>
                        <div class="text-left flex-1">
                            <p class="text-red-900 font-semibold mb-2">Error Details:</p>
                            <p class="text-red-700 text-sm font-mono break-all">
                                <%= error || "An unexpected error occurred. Please try again later." %>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex gap-4 justify-center flex-wrap mb-8">
                    <a href="/" class="px-8 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-semibold shadow-lg hover:shadow-xl">
                        <i class="fas fa-home mr-2"></i>Go to Dashboard
                    </a>
                    <button onclick="window.history.back()" class="px-8 py-3 bg-slate-200 text-slate-900 rounded-lg hover:bg-slate-300 transition font-semibold">
                        <i class="fas fa-arrow-left mr-2"></i>Go Back
                    </button>
                    <button onclick="window.location.reload()" class="px-8 py-3 bg-slate-200 text-slate-900 rounded-lg hover:bg-slate-300 transition font-semibold">
                        <i class="fas fa-redo mr-2"></i>Retry
                    </button>
                </div>

                <!-- Help Card -->
                <div class="p-6 bg-white rounded-lg border border-slate-200 shadow-sm">
                    <div class="flex items-start gap-3">
                        <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                            <i class="fas fa-life-ring text-blue-600"></i>
                        </div>
                        <div class="text-left">
                            <p class="text-slate-900 font-semibold mb-2">Need Assistance?</p>
                            <p class="text-slate-600 text-sm mb-3">
                                If this error persists, please try the following:
                            </p>
                            <ul class="text-slate-600 text-sm space-y-1">
                                <li>• Refresh the page and try again</li>
                                <li>• Clear your browser cache and cookies</li>
                                <li>• Check your internet connection</li>
                                <li>• Try again in a few minutes</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- System Status Link -->
                <div class="mt-6">
                    <button onclick="checkHealth()" class="text-slate-600 hover:text-slate-900 text-sm font-medium transition">
                        <i class="fas fa-heartbeat mr-2"></i>Check System Status
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script>
        function checkHealth() {
            fetch('/healthz')
                .then(response => response.json())
                .then(data => {
                    const status = data.ok ? '✅ System Status: Online' : '❌ System Status: Issues Detected';
                    alert(`${status}\n\nVersion: ${data.version || '1.0'}\nUptime: ${Math.floor(data.uptime || 0)}s\nDatabase: ${data.database || 'Unknown'}\nRedis: ${data.redis || 'Unknown'}`);
                })
                .catch(error => {
                    alert(`❌ Health Check Failed\n\nCannot connect to server. Please try again later.`);
                });
        }

        // Log error for debugging
        document.addEventListener('DOMContentLoaded', () => {
            console.error('Error page loaded:', '<%= error || "Unknown error" %>');
        });
    </script>

</body>
</html>
